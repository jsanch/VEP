.paddedcontent
  .row-fluid
    .span12
      %table.table.table-hover.table-condensed
        %thead
          %tr
            %th
              Patient Name
            %th
              Unit Number
            %th
              Actions
        %tbody
          - @patients.each do |patient|
            %tr
              %td
                = "#{patient.first_name} #{patient.middle_initial}. #{patient.last_name}"
              %td
                = patient.unit_number
              %td
                = link_to "Review Case", new_review_path